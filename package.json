{
  "name": "hackoverflow-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for HackOverflow 4.0 hackathon with Groq AI integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "watch": "tsc --watch",
    "test:env": "ts-node src/test-env.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "hackathon",
    "typescript",
    "groq",
    "ai"
  ],
  "author": "HackOverflow Team",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.7.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
